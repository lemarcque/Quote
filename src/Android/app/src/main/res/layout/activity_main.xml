<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ActionBar -->
    <Toolbar
        android:id="@+id/actionbar_quote_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Page content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#040404">

        <!-- Sentence -->
        <TextView
            android:id="@+id/textview_sentence_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam vel justo porta, vulputate felis vitae, vulputate eros."
            style="@style/TextView" />

        <!-- Author -->
        <TextView
            android:id="@+id/textview_author_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="- Author" style="@style/TextView"/>
    </LinearLayout>

</LinearLayout>